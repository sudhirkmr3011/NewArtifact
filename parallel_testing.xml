<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!--
*************code to integrate parallel testing concept based on value we pass in parameter*****************
    -->
<suite name="BDD Test Suite" parallel="tests" thread-count="2" >


<test name="Parallel_Execution_firefox"  >
<parameter name="device" value="firefox" />
<classes>
      <class name="runner.TestRunner2" />
</classes>
</test>

<test name="Parallel_Execution_chrome"  >
<parameter name="device" value="chrome" />
<classes>
      <class name="runner.TestRunner2" />
</classes>


</test>
</suite>

